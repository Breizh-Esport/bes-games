# Backend OIDC configuration (server-side only)
BES_OIDC_ISSUER_URL=https://idp.breizh-esport.fr/application/o/bes-games/
BES_OIDC_CLIENT_ID=your-client-id
BES_OIDC_CLIENT_SECRET=your-client-secret

# Public/backend URLs
BES_PUBLIC_URL=http://localhost:8080
BES_UI_BASE_URL=http://localhost:5173

# Cookie/session settings
BES_AUTH_COOKIE_SECRET=change-me-please
BES_AUTH_COOKIE_SECURE=false
BES_AUTH_COOKIE_SAMESITE=lax

# Token handling
BES_OIDC_SCOPES=openid,email,profile
BES_OIDC_OFFLINE_ACCESS=true
BES_AUTH_REFRESH_TTL=720h
BES_AUTH_ACCESS_TTL=5m
